<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/on_surface</item>
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/on_error</item>

        <!-- Default buttons style -->
        <item name="materialButtonStyle">@style/Widget.App.Button.Main</item>

        <!-- Default dialog style -->
        <item name="android:alertDialogTheme">@style/ThemeOverlay.App.Dialog</item>
    </style>

    <style name="ThemeOverlay.App.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowTitleStyle">@style/Dialog.App.Title</item>
    </style>
    <style name="Dialog.App.Title" parent="">
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>

    <style name="Widget.App.Button.Main" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">?colorSurface</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="detail_label">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_value">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="detail_value_clickable">
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">@color/clickable_text</item>
    </style>

</resources>
